name = "khan"
age = 20
pric = 45.5
is_student = True
print("Name", name)
print("Age", age)
print("Price", pric)
print("Is Student ", is_student)
print(type(name))
print(type(age))
print(type(pric))
print(type(is_student))
print(id(name))
print(id(age))
print(id(pric))
print(id(is_student))
print("Hello " + name + " your age is " + str(age)
      + "and yout price is " + str(pric))
print(f"hello {name} your age is {age}and your price is {pric}")
print("hello {} your age is {} and your price is {}".format(
    name, age, pric
))
print("hello {0} your age is {1} and your price is" \
" {2}".format(name, age, pric))
print("hello {n} your age is {a} and you price is {p}"
      .format(n=name, a=age, p=pric) )
print("hello {n} your age is {a} and your price is {p}"
.format(p=pric, a=age, n=name))




