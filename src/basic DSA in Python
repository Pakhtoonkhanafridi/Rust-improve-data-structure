# String Operations
name = "khan"
greeting = "hello , " + name + "!"
print(greeting)

print(greeting * 3) 

name = "khan"
greeting = "hello"
full_greeting = f"{greeting}, {name}!!!!!"
print(full_greeting)

laugh = "ha "
print(laugh * 5)

is_sunny = True
is_weekend = False
print("is_sunny and weekend",is_sunny and is_weekend)
print("Is_sunny or is_weekend", is_sunny or is_weekend)
print("is_sunny", not is_sunny)

# Type Conversion (Casting)
user_input =input("Enter a number: ")
age= int(user_input)
print(type(age))

price = 19.99
message = "The price is $ " + str(price)
print(message)
print(type(message))

print(bool(1))
print(bool(0))
print(bool(-1))
print(bool("Hi"))
print(bool(""))

fruits = ["apple", "banana", "cherry"]
numbers = [1,2,3,4,5]
mixed = [42, "hello", True, 3.14, True]

print(fruits[0])
print(numbers[2]) # 3

fruits[1] = "blueberry"
print(fruits) # ['apple', 'blueberry', 'cherry']

fruits.append("orange")
print(fruits)
fruits.remove("apple")
print(fruits)


score = 90
if score >= 0:
    if score >= 50:
        print("pass")
    else:
        print("fail")

else:
    print("invalid score")

    number_of_students = 100
    
    print("number of students", number_of_students)
