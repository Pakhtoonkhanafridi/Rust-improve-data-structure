contacts = [] # this will hold multiple dictioneries
while True:
     name = input("\nName:")
     if name.lower() == 'quit':
          break
     phone = input("Phone: ")
     email = input("email: ")

# Create a new dictionary for each contact
person = {
     'name': name,
     'phone': phone,
     'Email': email
}
# Add the dictionary to the main list
contacts.append(person)

print("\nYour contacts:")
for contact in contacts:
     print(f"{contact['name']} - {contact['phone']} - {contact['Email']}")
